@interface USBWatcher : NSArrayController
{
  io_iterator_t           gNewDeviceAddedIter,
                          gNewDeviceRemovedIter;
  IONotificationPortRef   gNotifyPort;
  CFMutableDictionaryRef  classToMatch;
}
